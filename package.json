{
  "name": "modular-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Modular React Platform with Module Federation",
  "workspaces": [
    "shared-components",
    "shared-data",
    "content-platform/shell",
    "content-platform/files-folders",
    "hubs-tab",
    "reports-tab",
    "user-tab",
    "top-level-shell",
    "graphql-server"
  ],
  "scripts": {
